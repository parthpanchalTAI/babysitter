<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:datePickerDialogTheme">@style/datePickerTheme</item>
        <item name="android:timePickerDialogTheme">@style/timePickerTheme</item>
        <item name="android:textColor">#000000</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:forceDarkAllowed">false</item>
        <item name="android:editTextBackground">@drawable/rn_edit_text_material</item>
    </style>

     <style name="datePickerTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">#F27289</item>
        <item name="colorControlActivated">#F27289</item>
        <item name="colorControlHighlight">#F27289</item>
    </style>

    <style name="timePickerTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">#F27289</item>
        <item name="android:textColorPrimary">#F27289</item>
    </style>

    <style name="SplashScreenTheme" parent="SplashScreen_SplashTheme">
        <item name="colorPrimaryDark">@color/status_bar_color</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

</resources>
